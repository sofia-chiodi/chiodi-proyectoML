<header>
  <h1 class="logo">
    <a href="/"
      ><img src="/images/logo-mercado-liebre.svg" alt="logo-mercado-liebre"
    /></a>
  </h1>
  <div class="search-bar-container">
    <form action="/" class="search-bar-form">
      <input
        type="text"
        class="search-bar"
        name="search"
        placeholder="Buscar productos, marcas o palabras clave"
      />
      <button type="submit" class="search-button">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>
  </div>
  <p class="banner-text">
    <i class="fa-solid fa-hand-holding-dollar"></i> Comprá en cuotas y sin
    Tarjeta de Crédito
  </p>

  <nav>
    <ul class="nav-ul-sites">
      <li class="nav-li-sites"><a href="#">Ofertas</a></li>
      <li class="nav-li-sites"><a href="#">Tiendas oficiales</a></li>
      <li class="nav-li-sites"><a href="#">Vender</a></li>
      <li class="nav-li-sites"><a href="#">Ayuda</a></li>
    </ul>
    <ul class="nav-ul-user">
        <% if (locals.isLogged) { %>
          <li class="nav-li-user">
          <a href="/users/profile"> <%= locals.userLogged.username %> <i class="fa-solid fa-user"></i></a></li>
        <% } else { %>
            <li class="nav-li-user">
              <a href="/users/register">Creá tu cuenta 
                <i class="fa-regular fa-id-card"></i></a>
            </li>
            <li class="nav-li-user">
              <a href="/users/login">Ingresá 
                <i class="fa-solid fa-right-to-bracket"></i></a>
        <% } %>
        
      </li>
      <li class="nav-li-user">
        <a href="#">Mis compras <i class="fa-solid fa-basket-shopping"></i></a>
      </li>
    </ul>
    <div class="burger-menu-container">
      <i class="burger-menu-icon fa-solid fa-bars"></i>
    </div>
  </nav>
</header>
